<table class="service-hours" data-template="paragraphs/service_hours">
  <colgroup>
    <col class="day" />
    <col class="hours" />
  </colgroup>
  <thead class="vads-u-visibility--screen-reader"><th>day</th><th>hours</th></thead>
  {% for hours in serviceHours %}
    {% if hours %}
      <tr>
        <td>{{ hours.0 }}:</td>
        {% if hours.1 %}
          <td>{{ hours.1 }}</td>
        {% else %}
          <td>Closed</td>
        {% endif %}
      </tr>
    {% endif %}
  {% endfor %}
</table>
