{% include "src/site/includes/header.html" %}
<main data-template="layouts/home" id="content">

  <!--
    Homepage redesign iteration (/homepage-test)
    Date: September 2022
    Author:  bryan@kindsys.us
  -->

  {% include "src/site/includes/hero.drupal.liquid" with hero %}
  {% include "src/site/includes/common-tasks.drupal.liquid" with commonTasks %}
  {% include "src/site/includes/blog-promo.drupal.liquid" with blogPromo %}
  {% include "src/site/includes/homepage-benefits.drupal.liquid" with hubs %}
  {% comment %}
  {% include "src/site/includes/email-update-signup.drupal.liquid" %}
  {% endcomment %}

  <!-- Email Updates Signup -->
  <div class="homepage-email-updates-signup">
    <div class="homepage-email-updates-signup__wrapper">
      <div class="vads-l-grid-container vads-u-padding-x--0 vads-u-padding-top--2p5">
        <div class="vads-l-row homepage-email-update-wrapper">
          <div class="vads-u-display--flex vads-u-align-items--center vads-u-margin-bottom--1p5">

            <div class="vads-u-font-size--lg vads-u-margin-right--2 vads-u-padding-left--4">
              Want the latest VA updates? Sign up with your email address.
            </div>
            <div class="vads-u-font-size--lg">
              <va-search-input label="" name="email-updates-signup-input" />
            </div>
          </div>
        </div>
      </div>
      <div id="vets-banner-1" class="veteran-banner-2">
        <div class="veteran-banner-container vads-u-margin-y--0 vads-u-margin-x--auto">
          <picture>
            <source
              srcset="https://s3-us-gov-west-1.amazonaws.com/content.www.va.gov/img/homepage/veterans-banner-mobile-1.png 640w, https://s3-us-gov-west-1.amazonaws.com/content.www.va.gov/img/homepage/veterans-banner-mobile-2.png 920w, https://s3-us-gov-west-1.amazonaws.com/content.www.va.gov/img/homepage/veterans-banner-mobile-3.png 1316w"
              media="(max-width: 767px)">
            <source
              srcset="https://s3-us-gov-west-1.amazonaws.com/content.www.va.gov/img/homepage/veterans-banner-tablet-1.png 1008w, https://s3-us-gov-west-1.amazonaws.com/content.www.va.gov/img/homepage/veterans-banner-tablet-2.png 1887w"
              media="(max-width: 1008px)">
            <img class="vads-u-width--full"
              src="https://s3-us-gov-west-1.amazonaws.com/content.www.va.gov/img/homepage/veterans-banner-desktop-1.png"
              srcset="https://s3-us-gov-west-1.amazonaws.com/content.www.va.gov/img/homepage/veterans-banner-desktop-1.png 1280w, https://s3-us-gov-west-1.amazonaws.com/content.www.va.gov/img/homepage/veterans-banner-desktop-2.png 2494w"
              loading="lazy" alt="Veteran portraits">
          </picture>
        </div>
      </div>
      {% comment %}
      {% include "src/site/includes/veteran-banner.html" %}
      {% endcomment %}
    </div>
  </div>

  <!-- / Email Updates Signup -->
</main> <!-- end #content -->


