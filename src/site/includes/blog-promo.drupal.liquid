<!-- Blog Promo -->
<div class="vads-u-background-color--primary-darker">
  <div class="vads-l-grid-container vads-u-padding-x--0 homepage-blog">
    <div class="vads-l-row">
      <!-- start first column-->
      <div class="vads-l-col--12 medium-screen:vads-l-col--4">
        <div class="homepage-blog__image">
          <img class="lazy" src="{{ thumbnail }}" alt="{{ thumbnailAltText }}" />
        </div>
      </div>
      <!-- end first column -->

      <!-- start second column -->
      <div class="vads-l-col--12 medium-screen:vads-l-col--8">
        <div
          class="vads-u-padding-left--6 vads-u-padding-y--6 small-desktop-screen:vads-u-padding-right--0 vads-u-color--white">
          <div>VA NEWS</div>
          <h2 class="vads-u-font-family--serif vads-u-margin-top--0">
            <a href="{{ url }}" class="vads-u-color--white">{{ title }}</a>
          </h2>

          <p class="vads-u-padding-right--5 small-desktop-screen:vads-u-padding-right--8 vads-u-margin-bottom--6">
            {{ copy }} <a href="{{ url }}" class="vads-u-color--white">Read the full article</a>
          </p>

          <div>
            <a href="#" class="vads-u-color--white">More VA news
              <i class="fas fa-chevron-right vads-u-margin-left--1" role="presentation"></i>
            </a>
          </div>
        </div>
      </div>
      <!-- end second column -->
    </div>
  </div>
</div>
<!-- /Blog promo -->